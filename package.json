{
  "name": "password-generator",
  "version": "0.1.0",
  "description": "A simple password generator application",
  "main": "application/server.js",
  "author": "Shawn Seymour <shawn@devshawn.com>",
  "license": "MIT",
  "scripts": {
    "serve": "NODE_ENV=development nodemon server/server.js --exec babel-node --ignore 'client/*'",
    "clean": "rimraf dist/",
    "build": "babel server/ --ignore 'tests/' -d dist",
    "start": "NODE_ENV=production PORT=8080 API_URL=test node dist/server.js",
    "dist": "yarn run clean && yarn run build",
    "build:all": "yarn run dist && cd client/ && yarn run dist && mv dist/ ../dist/public",
    "test:client": "cd client/ && jest",
    "test:server": "jest",
    "test": "yarn run test:server && yarn run test:client"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.1",
    "password-generator": "^2.2.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "jest-cli": "^21.2.1",
    "nodemon": "^1.12.1",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0"
  }
}
